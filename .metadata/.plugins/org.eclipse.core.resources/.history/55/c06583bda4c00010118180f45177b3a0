// Descrição dos códigos.
/* O conjunto de códigos a seguir, tem por objetivo realizar a prática de ArrayList */

package program;

// Importação de classes.
import java.util.ArrayList;
import java.util.List;


public class Main {

	public static void main(String[] args) {
		
		// Criação de uma lsita, que armazena Strings
		List<String> list = new ArrayList<>();
		
		// Adicionando elementos a lista. Lembrando que o elemento deve ser compatível com a lista, neste caso String.
		list.add("Maria");
		list.add("Alex");
		list.add("Bob");
		list.add("Anna");

		// Percorrento a lista com um "for each".
		System.out.println("Primeira exibição:");
		System.out.println(); // Quebra de linha
		for(String obj : list) {
			System.out.println("Nomes cadastrados: " + obj); // Exibição dos elementos.
		}
		
		System.out.println("-------------------------------------------------"); // Separador. Apenas para fins visuais.
		
		// Adicionando elementos em uma determinada posição X na lista.
		list.add(2, "Marco"); // Adicionado o elemento "Marco" na posição 2 da lista, logo entre "Alex" e "Bob".
		
		// Percorrendo a lista com um "for each".
		System.out.println("Segunda exibição:");
		System.out.println(); // Quebra de linha.
		for(String obj : list) {
			System.out.println("Nomes cadastrados: " + obj); // Exibição dos elementos.
			
		System.out.println("-------------------------------------------------"); // Separador. Apenas para fins visuais.
			
		// Verificando o tamanho da lista.
		int tamanhoLista = list.size();
		System.out.println("Tamanho da lista: " + tamanhoLista);
		
		System.out.println("-------------------------------------------------"); // Separador. Apenas para fins visuais.
		
		// Removendo um elemento da lista.
		list.remove("Anna"); // Remoção de um elemento específico da lista.
		
		// Exibição da lista atualizada após remoção de "Anna".
		System.out.println("Lista atualizada após remoção de Anna:");
		System.out.println(); // Quebra de linha.
		for(String obj : list) {
			System.out.println("Nomes cadastrados: " + obj);
		}
		
		
		
		
		}
	}

}
